<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.msh.fastdevelop.sys.service.dao.CustomerInfoDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.msh.fastdevelop.sys.client.po.CustomerInfoPO" id="customerInfoMap">
        <result property="id" column="id"/>
        <result property="name" column="name"/>
        <result property="company" column="company"/>
        <result property="position" column="position"/>
        <result property="member" column="member"/>
        <result property="birthday" column="birthday"/>
        <result property="tel" column="tel"/>
        <result property="mail" column="mail"/>
        <result property="areaId" column="area_id"/>
        <result property="spareContacts" column="spare_contacts"/>
        <result property="appraise" column="appraise"/>
        <result property="status" column="status"/>
        <result property="updateVersion" column="update_version"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="base_column_list">
        id,name,company,position,member,birthday,tel,mail,area_id,spare_contacts,appraise,status,update_version,create_time,update_time
    </sql>


    <sql id="base_where">
        <trim prefix="where" prefixOverrides="and|or">
            <if test="id != null">AND id = #{id}</if>
            <if test="name != null">AND name = #{name}</if>
            <if test="company != null">AND company = #{company}</if>
            <if test="position != null">AND position = #{position}</if>
            <if test="member != null">AND member = #{member}</if>
            <if test="birthday != null">AND birthday = #{birthday}</if>
            <if test="tel != null">AND tel = #{tel}</if>
            <if test="mail != null">AND mail = #{mail}</if>
            <if test="areaId != null">AND area_id = #{areaId}</if>
            <if test="spareContacts != null">AND spare_contacts = #{spareContacts}</if>
            <if test="appraise != null">AND appraise = #{appraise}</if>
            <if test="status != null">AND status = #{status}</if>
            <if test="updateVersion != null">AND update_version = #{updateVersion}</if>
            <if test="createTime != null">AND create_time = #{createTime}</if>
            <if test="updateTime != null">AND update_time = #{updateTime}</if>
            <if test="egtStatus != null">AND status &gt;= #{egtStatus}</if>
        </trim>
    </sql>

    <select id="get" resultMap="customerInfoMap" parameterType="long">
        select
        <include refid="base_column_list"/>
        from t_customer_info where id = #{id}
    </select>

    <select id="list" resultMap="customerInfoMap"
            parameterType="com.msh.fastdevelop.sys.client.qo.CustomerInfoQO">
        select
        <include refid="base_column_list"/>
        from t_customer_info
        <include refid="base_where"/>
        <if test="page != null">
            limit #{page.firstRow},#{page.pageSize}
        </if>
    </select>

    <select id="count" resultType="int" parameterType="com.msh.fastdevelop.sys.client.qo.CustomerInfoQO">
        select count(id) from t_customer_info
        <include refid="base_where"/>
    </select>

    <insert id="insert" parameterType="com.msh.fastdevelop.sys.client.po.CustomerInfoPO" useGeneratedKeys="true" keyProperty="id">
        insert into t_customer_info
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="name != null">name,</if>
            <if test="company != null">company,</if>
            <if test="position != null">position,</if>
            <if test="member != null">member,</if>
            <if test="birthday != null">birthday,</if>
            <if test="tel != null">tel,</if>
            <if test="mail != null">mail,</if>
            <if test="areaId != null">area_id,</if>
            <if test="spareContacts != null">spare_contacts,</if>
            <if test="appraise != null">appraise,</if>
            <if test="status != null">status,</if>
            update_version,
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="name != null">#{name},</if>
            <if test="company != null">#{company},</if>
            <if test="position != null">#{position},</if>
            <if test="member != null">#{member},</if>
            <if test="birthday != null">#{birthday},</if>
            <if test="tel != null">#{tel},</if>
            <if test="mail != null">#{mail},</if>
            <if test="areaId != null">#{areaId},</if>
            <if test="spareContacts != null">#{spareContacts},</if>
            <if test="appraise != null">#{appraise},</if>
            <if test="status != null">#{status},</if>
            1,
        </trim>
    </insert>

    <insert id="insertCollection" parameterType="com.msh.fastdevelop.sys.client.po.CustomerInfoPO" useGeneratedKeys="true" keyProperty="id">
        insert into t_customer_info
        (id,name,company,position,member,birthday,tel,mail,area_id,spare_contacts,appraise,status,update_version)
        values
        <foreach collection="list" index="index" separator="," item="item">
            (#{item.id},#{item.name},#{item.company},#{item.position},#{item.member},#{item.birthday},#{item.tel},#{item.mail},#{item.areaId},#{item.spareContacts},#{item.appraise},#{item.status},1)
        </foreach>
    </insert>

    <update id="update" parameterType="com.msh.fastdevelop.sys.client.po.CustomerInfoPO">
        update t_customer_info
        <set>
            <if test="name != null">
                name = #{name},
            </if>
            <if test="company != null">
                company = #{company},
            </if>
            <if test="position != null">
                position = #{position},
            </if>
            <if test="member != null">
                member = #{member},
            </if>
            <if test="birthday != null">
                birthday = #{birthday},
            </if>
            <if test="tel != null">
                tel = #{tel},
            </if>
            <if test="mail != null">
                mail = #{mail},
            </if>
            <if test="areaId != null">
                area_id = #{areaId},
            </if>
            <if test="spareContacts != null">
                spare_contacts = #{spareContacts},
            </if>
            <if test="appraise != null">
                appraise = #{appraise},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
             update_version = update_version+1,
        </set>
        where id = #{id}
        <if test="updateVersion != null">and update_version = #{updateVersion}</if>
    </update>

    <delete id="delete">
        delete from t_customer_info where id = #{id}
    </delete>
    <delete id="logicDelete">
        update t_customer_info set status = -1 where id = #{id}
    </delete>
</mapper>