<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.msh.fastdevelop.sys.service.dao.SmsTemplateDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.msh.fastdevelop.sys.client.po.SmsTemplatePO" id="smsTemplateMap">
        <result property="id" column="id"/>
        <result property="title" column="title"/>
        <result property="content" column="content"/>
        <result property="sendDate" column="send_date"/>
        <result property="sendTime" column="send_time"/>
        <result property="type" column="type"/>
        <result property="status" column="status"/>
        <result property="updateVersion" column="update_version"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="base_column_list">
        id,title,content,send_date,send_time,type,status,update_version,create_time,update_time
    </sql>


    <sql id="base_where">
        <trim prefix="where" prefixOverrides="and|or">
            <if test="id != null">AND id = #{id}</if>
            <if test="title != null">AND title = #{title}</if>
            <if test="content != null">AND content = #{content}</if>
            <if test="sendDate != null">AND send_date = #{sendDate}</if>
            <if test="sendTime != null">AND send_time = #{sendTime}</if>
            <if test="type != null">AND type = #{type}</if>
            <if test="status != null">AND status = #{status}</if>
            <if test="updateVersion != null">AND update_version = #{updateVersion}</if>
            <if test="createTime != null">AND create_time = #{createTime}</if>
            <if test="updateTime != null">AND update_time = #{updateTime}</if>
            <if test="egtStatus != null">AND status &gt;= #{egtStatus}</if>
        </trim>
    </sql>

    <select id="get" resultMap="smsTemplateMap" parameterType="long">
        select
        <include refid="base_column_list"/>
        from t_sms_template where id = #{id}
    </select>

    <select id="list" resultMap="smsTemplateMap"
            parameterType="com.msh.fastdevelop.sys.client.qo.SmsTemplateQO">
        select
        <include refid="base_column_list"/>
        from t_sms_template
        <include refid="base_where"/>
        <if test="page != null">
            limit #{page.firstRow},#{page.pageSize}
        </if>
    </select>

    <select id="count" resultType="int" parameterType="com.msh.fastdevelop.sys.client.qo.SmsTemplateQO">
        select count(id) from t_sms_template
        <include refid="base_where"/>
    </select>

    <insert id="insert" parameterType="com.msh.fastdevelop.sys.client.po.SmsTemplatePO" useGeneratedKeys="true" keyProperty="id">
        insert into t_sms_template
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="title != null">title,</if>
            <if test="content != null">content,</if>
            <if test="sendDate != null">send_date,</if>
            <if test="sendTime != null">send_time,</if>
            <if test="type != null">type,</if>
            <if test="status != null">status,</if>
            update_version,
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="title != null">#{title},</if>
            <if test="content != null">#{content},</if>
            <if test="sendDate != null">#{sendDate},</if>
            <if test="sendTime != null">#{sendTime},</if>
            <if test="type != null">#{type},</if>
            <if test="status != null">#{status},</if>
            1,
        </trim>
    </insert>

    <insert id="insertCollection" parameterType="com.msh.fastdevelop.sys.client.po.SmsTemplatePO" useGeneratedKeys="true" keyProperty="id">
        insert into t_sms_template
        (id,title,content,send_date,send_time,type,status,update_version)
        values
        <foreach collection="list" index="index" separator="," item="item">
            (#{item.id},#{item.title},#{item.content},#{item.sendDate},#{item.sendTime},#{item.type},#{item.status},1)
        </foreach>
    </insert>

    <update id="update" parameterType="com.msh.fastdevelop.sys.client.po.SmsTemplatePO">
        update t_sms_template
        <set>
            <if test="title != null">
                title = #{title},
            </if>
            <if test="content != null">
                content = #{content},
            </if>
            <if test="sendDate != null">
                send_date = #{sendDate},
            </if>
            <if test="sendTime != null">
                send_time = #{sendTime},
            </if>
            <if test="type != null">
                type = #{type},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
             update_version = update_version+1,
        </set>
        where id = #{id}
        <if test="updateVersion != null">and update_version = #{updateVersion}</if>
    </update>

    <delete id="delete">
        delete from t_sms_template where id = #{id}
    </delete>
    <delete id="logicDelete">
        update t_sms_template set status = -1 where id = #{id}
    </delete>
</mapper>