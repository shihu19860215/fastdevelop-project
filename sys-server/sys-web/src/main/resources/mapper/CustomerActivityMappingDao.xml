<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.msh.fastdevelop.sys.service.dao.CustomerActivityMappingDao">

    <!-- 可根据自己的需求，是否要使用 -->
    <resultMap type="com.msh.fastdevelop.sys.client.po.CustomerActivityMappingPO" id="customerActivityMappingMap">
        <result property="id" column="id"/>
        <result property="customerId" column="customer_id"/>
        <result property="activityId" column="activity_id"/>
        <result property="status" column="status"/>
        <result property="updateVersion" column="update_version"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <sql id="base_column_list">
        id,customer_id,activity_id,status,update_version,create_time,update_time
    </sql>


    <sql id="base_where">
        <trim prefix="where" prefixOverrides="and|or">
            <if test="id != null">AND id = #{id}</if>
            <if test="customerId != null">AND customer_id = #{customerId}</if>
            <if test="activityId != null">AND activity_id = #{activityId}</if>
            <if test="status != null">AND status = #{status}</if>
            <if test="updateVersion != null">AND update_version = #{updateVersion}</if>
            <if test="createTime != null">AND create_time = #{createTime}</if>
            <if test="updateTime != null">AND update_time = #{updateTime}</if>
            <if test="egtStatus != null">AND status &gt;= #{egtStatus}</if>
        </trim>
    </sql>

    <select id="get" resultMap="customerActivityMappingMap" parameterType="long">
        select
        <include refid="base_column_list"/>
        from t_customer_activity_mapping where id = #{id}
    </select>

    <select id="list" resultMap="customerActivityMappingMap"
            parameterType="com.msh.fastdevelop.sys.client.qo.CustomerActivityMappingQO">
        select
        <include refid="base_column_list"/>
        from t_customer_activity_mapping
        <include refid="base_where"/>
        <if test="page != null">
            limit #{page.firstRow},#{page.pageSize}
        </if>
    </select>

    <select id="count" resultType="int" parameterType="com.msh.fastdevelop.sys.client.qo.CustomerActivityMappingQO">
        select count(id) from t_customer_activity_mapping
        <include refid="base_where"/>
    </select>

    <insert id="insert" parameterType="com.msh.fastdevelop.sys.client.po.CustomerActivityMappingPO" useGeneratedKeys="true" keyProperty="id">
        insert into t_customer_activity_mapping
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="customerId != null">customer_id,</if>
            <if test="activityId != null">activity_id,</if>
            <if test="status != null">status,</if>
            update_version,
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="customerId != null">#{customerId},</if>
            <if test="activityId != null">#{activityId},</if>
            <if test="status != null">#{status},</if>
            1,
        </trim>
    </insert>

    <insert id="insertCollection" parameterType="com.msh.fastdevelop.sys.client.po.CustomerActivityMappingPO" useGeneratedKeys="true" keyProperty="id">
        insert into t_customer_activity_mapping
        (id,customer_id,activity_id,status,update_version)
        values
        <foreach collection="list" index="index" separator="," item="item">
            (#{item.id},#{item.customerId},#{item.activityId},#{item.status},1)
        </foreach>
    </insert>

    <update id="update" parameterType="com.msh.fastdevelop.sys.client.po.CustomerActivityMappingPO">
        update t_customer_activity_mapping
        <set>
            <if test="customerId != null">
                customer_id = #{customerId},
            </if>
            <if test="activityId != null">
                activity_id = #{activityId},
            </if>
            <if test="status != null">
                status = #{status},
            </if>
             update_version = update_version+1,
        </set>
        where id = #{id}
        <if test="updateVersion != null">and update_version = #{updateVersion}</if>
    </update>

    <delete id="delete">
        delete from t_customer_activity_mapping where id = #{id}
    </delete>
    <delete id="logicDelete">
        update t_customer_activity_mapping set status = -1 where id = #{id}
    </delete>
</mapper>